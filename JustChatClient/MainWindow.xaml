<Window x:Name="JCC" x:Class="JustChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustChatClient"
        mc:Ignorable="d"
        Title="JCC - Just Chat Client" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanMinimize" 
        SizeToContent="WidthAndHeight" 
        Closing="Window_Closing" 
        Initialized="Window_Initialized" 
        HorizontalAlignment="Stretch" 
        Icon="JustChat.ico" 
        Height="500" Width="700">
    <Grid 
        Width="725" 
        ClipToBounds="True">
        <TextBox 
            x:Name="inputBox" 
            HorizontalAlignment="Left"  
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="300" 
            Height="24" 
            KeyDown="inputBox_KeyDown" 
            Margin="362,450,0,0" BorderThickness="2,2,2,2"
        />
        <TextBox 
            x:Name="userName" 
            HorizontalAlignment="Left"  
            Text="user" 
            TextWrapping="NoWrap" 
            VerticalAlignment="Top" 
            Margin="57,14,0,0" BorderBrush="#00ABADB3" MaxLines="1"
        />
        <ListView 
            x:Name="chatLog"  
            ItemsSource="{Binding Messages}" 
            Focusable="False" Height="305" 
            VerticalAlignment="Bottom" 
            Margin="0,0,35,120" 
            VerticalContentAlignment="Center" 
            Background="{x:Null}" 
            BorderThickness="0,0,0,0" SelectionMode="Extended" HorizontalAlignment="Right" Width="328">
            <ListView.ItemContainerStyle>
                <Style 
                    TargetType="{x:Type ListBoxItem}"
                    BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter 
                        Property="DockPanel.Dock"
                        Value="Bottom"
                    />
                </Style>
            </ListView.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel 
                        LastChildFill="False" 
                        ClipToBounds="False" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel x:Name="chatMessage" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Stretch" 
                        IsEnabled="True" 
                        ClipToBounds="False" 
                        Focusable="False" 
                        Width="295">
                        <Label 
                            x:Name="messageSender" 
                            Content="{Binding User}" 
                            FontWeight="Bold" 
                            FontStyle="Italic"/>
                        <TextBlock 
                            x:Name="messageText" 
                            Text="{Binding Message}" 
                            TextWrapping="Wrap" 
                            TextTrimming="WordEllipsis" 
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <CheckBox 
            x:Name="isConnected" 
            Content="Connection" 
            HorizontalAlignment="Left" 
            Margin="224,10,0,0" 
            VerticalAlignment="Top" 
            IsEnabled="False" 
            IsChecked="{Binding IsConnected}" 
            Focusable="False"
        />
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
    </Grid>
</Window>
