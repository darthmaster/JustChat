<Window x:Name="JCC" x:Class="JustChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustChatClient"
        mc:Ignorable="d"
        Title="JCC - Just Chat Client" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize" 
        SizeToContent="WidthAndHeight" 
        Closing="Window_Closing" 
        Initialized="Window_Initialized" 
        HorizontalAlignment="Stretch" 
        Icon="JustChat.ico" 
        Height="500" Width="495" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" MinWidth="495" MinHeight="500">
    <Grid 
        ClipToBounds="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBox 
            x:Name="inputBox"  
            TextWrapping="Wrap" 
            VerticalAlignment="Bottom" 
            Height="24" 
            KeyDown="inputBox_KeyDown" 
            Margin="0,0,55,25" BorderThickness="2,2,2,2" Grid.Column="1"
        />
        <TextBox 
            x:Name="userName" 
            HorizontalAlignment="Left"  
            Text="user" 
            TextWrapping="NoWrap" 
            VerticalAlignment="Top" 
            Margin="57,10,0,0" BorderBrush="#00ABADB3" MaxLines="1" Height="26" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" VerticalScrollBarVisibility="Disabled" MinWidth="138" MinHeight="26" MaxHeight="26"
        />
        <ListView 
            x:Name="chatLog"  
            ItemsSource="{Binding Messages}" 
            Focusable="False" 
            Margin="0,44,10,54" 
            VerticalContentAlignment="Center" 
            BorderThickness="2,2,2,2" SelectionMode="Extended" Background="{x:Null}" Grid.Column="1" >
            <ListView.ItemContainerStyle>
                <Style 
                    TargetType="{x:Type ListBoxItem}"
                    BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter 
                        Property="DockPanel.Dock"
                        Value="Bottom"
                    />
                </Style>
            </ListView.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel 
                        LastChildFill="False" 
                        ClipToBounds="False" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel x:Name="chatMessage" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Stretch" 
                        IsEnabled="True" 
                        ClipToBounds="True" 
                        Focusable="False" Grid.IsSharedSizeScope="True">
                        <Label 
                            x:Name="messageSender" 
                            Content="{Binding User}" 
                            FontWeight="Bold" 
                            FontStyle="Italic"/>
                        <TextBlock 
                            x:Name="messageText" 
                            Text="{Binding Message}" 
                            TextWrapping="Wrap" 
                            TextTrimming="WordEllipsis" 
                            VerticalAlignment="Center"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <StatusBar Height="20" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <CheckBox 
            x:Name="isConnected" 
            Content="Connection" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            IsChecked="{Binding IsConnected}" 
            Focusable="False" IsEnabled="False" BorderBrush="#00707070"
            >
                <CheckBox.Foreground>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GrayTextColorKey}}"/>
                </CheckBox.Foreground>
            </CheckBox>
            <CheckBox 
            x:Name="isBusy" 
            Content="Busy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            IsChecked="{Binding IsBusy}" 
            Focusable="False" IsEnabled="False" BorderBrush="#00707070"
            >
                <CheckBox.Foreground>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GrayTextColorKey}}"/>
                </CheckBox.Foreground>
            </CheckBox>
        </StatusBar>
        <ListView Margin="10,44,5,25" BorderThickness="2,2,2,2" Background="Transparent" BorderBrush="#FFABADB3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="sendButton" Content="Send" Margin="0,0,10,25" VerticalAlignment="Bottom" Height="24" Click="sendButton_Click" HorizontalAlignment="Right" Width="40" BorderThickness="2,2,2,2" BorderBrush="#FFABADB3" Grid.Column="1"/>
    </Grid>
</Window>
